@model Actividad4LengProg3.Models.CalificacionViewModel

<h2>
    Editar Calificaciones
</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form class="form-control" action="/Calificaciones/Editar" method="post">
    <input type="hidden" name="ID" value="@Model.ID" />

    <div>
        <label class="form-label">Matricula:</label>
        <input class="form-control" type="text" name="MATRICULA_ESTUDIANTE" value="@Model.MATRICULA_ESTUDIANTE" />
    </div>
    <div>
        <label class="form-label">Codigo de la Materia:</label>
        <input class="form-control" type="text" name="CODIGO_MATERIA" value="@Model.CODIGO_MATERIA" />
    </div>
    <div>
        <label class="form-label">Nota:</label>
        <input name="NOTA" type="number" step="0.01" min="0" max="100" value="@Model.NOTA" class="form-control" />


    </div>
    <div>
        <label class="form-label">Periodo:</label>
        <input class="form-control" type="text" name="Periodo" value="@Model.PERIODO" />
    </div>
    <br />
    <button class="btn btn-success" type="submit">Guardar</button>
    <a class="btn btn-danger" href="/Calificaciones/Lista">Cancelar</a>
</form>