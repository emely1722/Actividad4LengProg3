@model Actividad4LengProg3.Models.CalificacionViewModel

<h2>
    Registro de Calificaciones
</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form asp-action="Registrar" asp-controller="Calificaciones" method="post">
    <div>
        <label class="form-label" asp-for="MATRICULA_ESTUDIANTE">MatriculaEstudiante</label>
        <input class="form-control" asp-for="MATRICULA_ESTUDIANTE" />
        <span asp-validation-for="MATRICULA_ESTUDIANTE" class="text-danger"></span>
    </div>

    <div>
        <label class="form-label" asp-for="CODIGO_MATERIA"></label>
        <input class="form-control" asp-for="CODIGO_MATERIA" />
        <span asp-validation-for="CODIGO_MATERIA" class="text-danger"></span>
    </div>

    <div>
        <label class="form-label" asp-for="NOTA">Nota</label>
        <input class="form-control" asp-for="NOTA" type="number" min="0" max="100" step="0.01" />
        <span asp-validation-for="NOTA" class="text-danger"></span>
    </div>

    <div>
        <label class="form-label" asp-for="PERIODO">Periodo</label>
        <input class="form-control" asp-for="PERIODO" />
        <span asp-validation-for="PERIODO" class="text-danger"></span>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Registrar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}