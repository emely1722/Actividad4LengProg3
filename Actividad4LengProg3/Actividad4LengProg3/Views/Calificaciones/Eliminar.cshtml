@model Actividad4LengProg3.Models.CalificacionViewModel

<h2>
    Eliminar Calificacion
</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<div class="container">

    <p>¿Estás seguro de que deseas eliminar la siguiente Calificación?</p>

    <ul>
        <li><strong>MatriculaEstudiante:</strong> @Model.MATRICULA_ESTUDIANTE</li>
        <li><strong>CodigoMateria:</strong> @Model.CODIGO_MATERIA</li>
        <li><strong>Nota:</strong> @Model.NOTA</li>
        <li><strong>Periodo:</strong> @Model.PERIODO</li>
    </ul>

</div>