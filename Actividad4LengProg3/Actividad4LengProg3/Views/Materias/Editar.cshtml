@model Actividad4LengProg3.Models.MateriaViewModel


<h2>
    Edicion de Materias Registradas
</h2>

<br />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<div class="container mb-3">
    <form action="/Materias/Editar" method="post">
        <div>
            <label class="form-label">Código:</label>
            <input class="form-control" type="text" name="codigo" value="@Model.codigo" />
        </div>



        <div>
            <label class="form-label">Nombre:</label>
            <input class="form-control" type="text" name="nombre_materia" value="@Model.nombre_materia" />
        </div>


        <div>
            <label class="form-label">Creditos:</label>
            <input class="form-control" type="number" min="1" max="10" name="creditos" value="@Model.creditos" />
        </div>

        <div>
            <label class="form-label" asp-for="carrera">Carreras</label>
            <select class="form-select" asp-for="carrera" asp-items="@(new SelectList (
            new[] { "Ingeniería de Software",
            "Administración de Empresas",
            "Odontología"}
                   ))">
                <option value="">Seleccione una carrera</option>
            </select>
            <span asp-validation-for="carrera" class="text-danger"></span>
        </div>

        <br />


        <input type="hidden" asp-for="codigo" />
        <button class="btn btn-success" type="submit">Guardar</button>
        <a class="btn btn-danger" href="/Materias/Lista">Cancelar</a>
    </form>
</div>