@{
}

<h2>
    Registro de Materias
</h2>

<br />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-primary table-hover table-bordered">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Crédito</th>
                <th>Carrera</th>
                <th>Acción</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var mat in Model)
            {
                <tr>
                    <td>@mat.Código</td>
                    <td>@mat.Nombre</td>
                    <td>@mat.Créditos</td>
                    <td>@mat.Carrera</td>
                    <td>
                        <a class="btn btn-success m-2" href="/Materias/Editar?codigo=@mat.Codigo">Editar</a>
                        <a class="btn btn-danger" href="/Materias/Eliminar?codigo=@mat.Codigo">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No existen registros de materias.</p>
}
}

